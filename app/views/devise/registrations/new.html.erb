<div class="h-100 d-flex align-items-center justify-content-center">
    <h2>Sign up</h2>
</div>

<div class="h-100 d-flex align-items-center justify-content-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
          <%= f.label :nombre %><br />
          <%= f.text_field :nombre, autofocus: true%>
          </div>

          <div class="field">
          <%= f.label :apellido %><br />
          <%= f.text_field :apellido, autofocus: true%>
          </div>

          <div class="field">
          <%= f.label :dni %><br />
          <%= f.number_field :dni, autofocus: true%>
          </div>
        
          <div class="field">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field">
          <%= f.label :direccion %><br />
          <%= f.text_field :direccion, autofocus: true%>
          </div>

          <div class="field">
          <%= f.label :localidad %><br />
          <%= f.select :localidad, ['Quilmes', 'Bernal', 'Berazategui']%>
          </div>

          <div class="field">
          <%= f.label :provincia %><br />
          <%= f.select :provincia, ['Buenos Aires', 'CABA']%>
          </div>

          <div class="field">
          <%= f.label :pais %><br />
          <%= f.select :pais, ['Argentina']%>
          </div>
          <%= f.hidden_field :tipo, value: "A" %>

          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>


          <div class="actions">
            <%= f.submit "Registrarse", class: "btn btn-dark" %>
          </div>
    <% end %>
</div>

<div class="h-100 d-flex align-items-center justify-content-center">
   Ya estas registrado? <%= render "devise/shared/links" %>
</div>
