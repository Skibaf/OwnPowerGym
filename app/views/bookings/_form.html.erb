<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :fecha, style: "display: block" %>
    <%= form.date_field :fecha %>
  </div>

  <div>
    <%= form.label :hora, style: "display: block" %>
    <%= form.time_field :hora %>
  </div>

  <div>
    <%= form.label :Clase %>
    <%= form.text_field :lesson_id %>
    <%= collection_select( :lesson, :lesson_id, Lesson.all, :id, :lesson, {}, { :multiple => false } ) %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.text_field :user_id %>
  </div>


  <div>
    <%= form.label :'Tipo de Pago' %>
    <%= collection_select( :Pterm, :pterm_id, Pterm.all, :id, :pterm, {}, { :multiple => false } ) %>
  </div>

  <div>
    <%= form.submit  "Crear Clase" %>
  </div>
<% end %>
