<%= form_with(model: booking) do |form| %>
  <% if booking.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(booking.errors.count, "error") %> prohibited this booking from being saved:</h2>

      <ul>
        <% booking.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :fecha, style: "display: block" %>
    <%= form.date_field :fecha %>
  </div>

  <div>
    <%= form.label :Hora, style: "display: block" %>
    <%= form.time_field :time %>
  </div>

  <div>
    <%= form.label :Curso, style: "display: block" %>
    
    <%= collection_select( :booking, :lesson_id, Lesson.all, :id, :curso, {}, { :multiple => false } ) %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    
    <%= collection_select( :booking , :user_id, User.all, :id, :email, {}, { :multiple => false } ) %>
  </div>

  <div>
    <%= form.label :pago, style: "display: block" %>
    
    <%= collection_select( :booking, :pterm_id, Pterm.all, :id, :pterm, {}, { :multiple => false } ) %>
  </div> <br>

  <div>
    <%= form.submit "Reservar" , class: "btn btn-outline-dark" %>
  </div>
<% end %>
